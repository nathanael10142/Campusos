# Campus OS UNIGOM - Environment Variables Template
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=Campus OS UNIGOM
VERSION=15.0.0
ENVIRONMENT=development
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Supabase Configuration (Primary Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Direct Database URL (optional, for migrations)
DATABASE_URL=postgresql://user:password@host:port/database

# Google AI (Gemini)
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=https://your-domain.com/api/v1/oauth/google/callback

# Security Keys (Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
JWT_SECRET_KEY=your-secret-key-here-use-secrets-module
DEVICE_ENCRYPTION_KEY=your-encryption-key-here-44-chars-minimum

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Admin Contact
ADMIN_EMAIL=admin@unigom.ac.cd
ADMIN_PHONE=+243999999999

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# AI Configuration
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.7
AI_TIMEOUT_SECONDS=30

# Batera Coins
COIN_TO_USD_RATE=0.5
PAYMENT_PROVIDER=manual

# Optional Services
ELEVENLABS_API_KEY=
REDIS_URL=redis://localhost:6379/0
ENABLE_REDIS_CACHE=False
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=
ENABLE_PUSH_NOTIFICATIONS=False
